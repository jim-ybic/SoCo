<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:id="@+id/ll_sproject">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:onClick="saveProjectToDb"
            android:drawableLeft="@drawable/ic_action_save"
            android:layout_weight="1"
            android:textSize="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:onClick="setProjectCompleted"
            android:drawableLeft="@drawable/ic_action_done"
            android:layout_weight="1"
            android:textSize="10dp"/>
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@id/sv_sproject"
        android:layout_below="@id/ll_sproject">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_spname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_display_1_material"
                android:hint="Name not set" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/tr_spdatetime" >
                    <TextView
                        android:id="@+id/tv_spdate"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Date: " />
                    <EditText
                        android:id="@+id/et_spdate"
                        android:layout_height="wrap_content"
                        android:hint="Click to set Date"/>
                    <TextView
                        android:id="@+id/tv_sptime"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="\tTime: " />
                    <EditText
                        android:id="@+id/et_sptime"
                        android:layout_height="wrap_content"
                        android:hint="Click to set time" />
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TableRow
                    android:id="@+id/tr_splocation" >
                    <TextView
                        android:id="@+id/tv_splocname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Location: " />
                    <EditText
                        android:id="@+id/et_splocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Click to set location"/>
                    <Button
                        android:id="@+id/bt_splocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Map"
                        android:onClick="showLocationDetails"
                        android:layout_alignParentRight="true"
                        android:textSize="10dp"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/tr_spdesc">
                    <TextView
                        android:id="@+id/tv_spdesc"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Description: " />
                    <EditText
                        android:id="@+id/et_spdesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Click to set description"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/tr_spphone">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Phone: " />
                    <AutoCompleteTextView
                        android:id="@+id/et_spphone_auto"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:hint="Click to set phone number"
                        android:inputType="phone" />
                    <ImageButton
                        android:id="@+id/bt_call"
                        android:src="@drawable/ic_action_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="call"
                        android:textSize="10dp"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_spemail">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Email: " />
                    <AutoCompleteTextView
                        android:id="@+id/et_spemail_auto"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:hint="Click to set email address"
                        android:inputType="textEmailAddress"  />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_mail"
                        android:onClick="email"
                        android:textSize="10dp"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:hint="Shared Files"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Detail"
                        android:onClick="sharedFileDetails"
                        android:textSize="10dp"
                        android:layout_alignParentRight="true"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@id/tv_shared_file_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="No shared file found"
                        android:layout_weight="1"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/tr_sptag">
                    <TextView
                        android:id="@+id/tv_sptag"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Tag: " />
                    <EditText
                        android:id="@+id/et_sptag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="Click to set tag"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>