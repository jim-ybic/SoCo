<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:id="@+id/ll_sproject">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:onClick="saveProjectToDb"
            android:drawableLeft="@drawable/ic_action_save"
            android:layout_weight="1"
            android:textSize="10dp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Archive"
            android:onClick="setProjectCompleted"
            android:drawableLeft="@drawable/ic_action_done"
            android:layout_weight="1"
            android:textSize="10dp"/>
    </LinearLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:id="@id/sv_sproject"
        android:layout_below="@id/ll_sproject">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_spname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/abc_text_size_display_1_material"
                android:hint="Name not set" />

            <!--<RelativeLayout-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:orientation="horizontal" >-->
                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:textSize="25dp"-->
                    <!--android:hint="Date and Time" />-->
                <!--<Button-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:text="+"-->
                    <!--android:onClick="setVisibleDateTimePlace"-->
                    <!--android:textSize="20dp"-->
                    <!--android:layout_alignParentRight="true"/>-->
            <!--</RelativeLayout>-->

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableRow>
                    <TextView
                        android:id="@+id/tv_spdate"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Date: " />
                    <EditText
                        android:id="@+id/et_spdate"
                        android:layout_height="wrap_content"
                        android:hint="Date not set"/>
                    <!--<Button-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:onClick="clearPdate"-->
                        <!--android:id="@+id/bt_clear_pdate"-->
                        <!--android:text="-"-->
                        <!--android:textSize="20dp"/>-->
                <!--</TableRow>-->
                <!--<TableRow>-->
                    <TextView
                        android:id="@+id/tv_sptime"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="\tTime: " />
                    <EditText
                        android:id="@+id/et_sptime"
                        android:layout_height="wrap_content"
                        android:hint="Time not set" />
                    <!--<Button-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:onClick="clearPdatetime"-->
                        <!--android:id="@+id/bt_clear_pdatetime"-->
                        <!--android:text="-"-->
                        <!--android:textSize="20dp" />-->
                </TableRow>
            </TableLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:hint="Location" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:onClick="showLocationDetails"
                    android:textSize="20dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/tr_spplace">
                    <TextView
                        android:id="@+id/tv_splocname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Location not set"
                        android:layout_weight="1"/>
                </TableRow>
            </TableLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:hint="Description" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:onClick="setVisiblePdesc"
                    android:textSize="20dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/tr_spdesc">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Description" />
                    <EditText
                        android:id="@+id/et_spdesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Description not set"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="clearPdesc"
                        android:id="@+id/bt_clear_pdesc"
                        android:text="-"
                        android:textSize="20dp"/>
                </TableRow>
            </TableLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25dp"
                    android:hint="Contact" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+"
                    android:onClick="setVisiblePhoneEmail"
                    android:textSize="20dp"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow
                    android:id="@+id/tr_spphone">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Phone" />
                    <AutoCompleteTextView
                        android:id="@+id/et_spphone_auto"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:hint="Phone not set"
                        android:inputType="phone" />
                    <ImageButton
                        android:id="@+id/bt_call"
                        android:src="@drawable/ic_action_call"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="call"
                        android:textSize="10dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="clearPphone"
                        android:id="@+id/bt_clear_pphone"
                        android:text="-"
                        android:textSize="20dp"/>
                </TableRow>
                <TableRow
                    android:id="@+id/tr_spemail">
                    <TextView
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:text="Email" />
                    <AutoCompleteTextView
                        android:id="@+id/et_spemail_auto"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_width="fill_parent"
                        android:hint="Email not set"
                        android:inputType="textEmailAddress"  />
                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_mail"
                        android:onClick="email"
                        android:textSize="10dp"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="clearPemail"
                        android:id="@+id/bt_clear_pemail"
                        android:text="-"
                        android:textSize="20dp"/>
                </TableRow>
            </TableLayout>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TableRow>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="25dp"
                        android:hint="Shared Files"
                        android:layout_weight="1"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="..."
                        android:onClick="sharedFileDetails"
                        android:textSize="20dp"
                        android:layout_alignParentRight="true"/>
                </TableRow>
                <TableRow>
                    <TextView
                        android:id="@id/tv_shared_file_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="No shared file found"
                        android:layout_weight="1"/>
                </TableRow>
            </TableLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>