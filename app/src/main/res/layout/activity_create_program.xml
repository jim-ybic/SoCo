<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/pname"
        android:hint="Input name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/pdate"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Input date" />

    <EditText
        android:id="@+id/ptime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Input time" />

    <EditText android:id="@+id/pplace"
        android:hint="Input place"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/pdesc"
        android:hint="Input description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/pphone"
        android:hint="Input phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/pemail"
        android:hint="Input email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText android:id="@+id/pwechat"
        android:hint="Input wechat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Create Program"
            android:onClick="createProgram" />
    </LinearLayout>

</LinearLayout>