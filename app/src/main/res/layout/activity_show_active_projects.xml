<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true" >

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow>
            <EditText
                android:id="@+id/et_quickadd"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Quick Add Project"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="quickAdd"
                android:text="+"
                android:textSize="25dp"/>
        </TableRow>
    </TableLayout>

    <ListView
        android:id="@+id/lv_active_programs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center|bottom"
        android:orientation="horizontal" >
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New"
            android:onClick="createProject"
            android:drawableLeft="@drawable/ic_action_new"
            android:layout_weight="1"
            android:textSize="10dp"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Archive"
            android:onClick="showCompletedProjects"
            android:drawableLeft="@drawable/ic_action_collection"
            android:layout_weight="1"
            android:textSize="10dp"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:onClick="exit"
            android:drawableLeft="@drawable/ic_action_forward"
            android:layout_weight="1"
            android:textSize="10dp"/>
        <!--<Button-->
            <!--android:layout_width="fill_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="HB"-->
            <!--android:onClick="hbTest"-->
            <!--android:drawableLeft="@drawable/ic_action_forward"-->
            <!--android:layout_weight="1"-->
            <!--android:textSize="10dp"/>-->
    </LinearLayout>

</LinearLayout>