                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finish"
                android:onClick="completeProgram"
                android:drawableLeft="@drawable/ic_action_done"
                android:layout_weight="1"
                android:textSize="10dp"/>
            <Button
                android:layout_width="wrap_content"
