                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clearPdesc"
                android:id="@+id/bt_clear_pdesc"
                android:text="---"
                android:textSize="10dp"/>
        </TableRow>
    </TableLayout>

