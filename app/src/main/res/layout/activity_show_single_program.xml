    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tl_pbasic">
        <TableRow
            android:id="@+id/tr_spdate">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Date" />
            <EditText
                android:id="@+id/et_spdate"
                android:layout_weight="1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="Date not set"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clearPdate"
                android:id="@+id/bt_clear_pdate"
                android:text="---"
                android:textSize="10dp"/>
            <!--android:src="@drawable/ic_action_remove"-->
        </TableRow>
        <TableRow
            android:id="@+id/tr_sptime">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Time" />
            <EditText
                android:id="@+id/et_sptime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="Time not set" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clearPtime"
                android:id="@+id/bt_clear_ptime"
                android:text="---"
                android:textSize="10dp" />
        </TableRow>
        <TableRow
            android:id="@+id/tr_spplace">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Place" />
            <EditText
                android:id="@+id/et_spplace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Place not set"
                android:layout_weight="1"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="clearPplace"
                android:id="@+id/bt_clear_pplace"
                android:text="---"
                android:textSize="10dp" />
        </TableRow>
        <TableRow
            android:id="@+id/tr_spdesc">
            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="Description" />
            <EditText
                android:id="@+id/et_spdesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description not set"
                android:layout_weight="1"/>
