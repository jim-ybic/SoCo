<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Clean Database"
        android:onClick="cleanDB"/-->

    <ListView
        android:id="@+id/lv_active_programs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="horizontal" >
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="New Program"
            android:onClick="createProgram"
            android:drawableTop="@drawable/ic_action_new"
            android:layout_weight="1"
            android:textSize="10dp"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Completed Programs"
            android:onClick="showCompletedPrograms"
            android:drawableTop="@drawable/ic_action_collection"
            android:layout_weight="1"
            android:textSize="10dp"/>
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Exit"
            android:onClick="exit"
            android:drawableTop="@drawable/ic_action_forward"
            android:layout_weight="1"
            android:textSize="10dp"/>
    </LinearLayout>

</LinearLayout>