<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Clean Database"
        android:onClick="cleanDB"/-->

    <ListView
        android:id="@+id/lv_active_programs"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center|bottom"
        android:orientation="vertical" >
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_create_program"
            android:onClick="createProgram" />
        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Show Completed Programs"
            android:onClick="showCompletedPrograms" />
    </LinearLayout>

</LinearLayout>