<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="android:colorPrimary">@color/primaryColor</item>
        <item name="android:colorPrimaryDark">@color/primaryColorDark</item>
        <item name="android:colorAccent">@color/accentColor</item>
        <item name="android:statusBarColor">@color/black_semi_transparent</item>
        <item name="actionBarTabStyle">@style/Soco.ActionBarTab.Style</item>
        <item name="actionBarTabTextStyle">@style/Soco.ActionBarTabText.Style</item>
    </style>

    <style name="TallActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarSize">140dp</item>
        <item name="actionBarSize">140dp</item>
        <item name="actionBarTabStyle">@style/Soco.ActionBarTab.Style</item>
        <item name="actionBarTabTextStyle">@style/Soco.ActionBarTabText.Style</item>
    </style>

    <style name="DashboardActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarSize">80dp</item>
        <item name="actionBarSize">80dp</item>
        <item name="actionBarTabStyle">@style/Soco.ActionBarTab.Style</item>
        <item name="actionBarTabTextStyle">@style/Soco.ActionBarTabText.Style</item>
    </style>

    <style name="EventGroupBuddiesTallActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarSize">100dp</item>
        <item name="actionBarSize">100dp</item>
        <item name="actionBarTabStyle">@style/Soco.ActionBarTab.Style</item>
        <item name="actionBarTabTextStyle">@style/Soco.ActionBarTabText.Style</item>
    </style>

    <style name="GroupDetailsTallActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarSize">240dp</item>
        <item name="actionBarSize">240dp</item>
        <item name="actionBarTabStyle">@style/Soco.ActionBarTab.Style</item>
        <item name="actionBarTabTextStyle">@style/Soco.ActionBarTabText.Style</item>
    </style>

    <style name="UserProfileTallActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarSize">160dp</item>
        <item name="actionBarSize">160dp</item>
        <item name="actionBarTabStyle">@style/Soco.ActionBarTab.Style</item>
        <item name="actionBarTabTextStyle">@style/Soco.ActionBarTabText.Style</item>
    </style>

    <style name="CodeFont" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#00FF00</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Soco.ActionBarTab.Style" parent="@style/AppTheme">
        <item name="android:background">@drawable/tab_indicator</item>
    </style>
    <style name="Soco.ActionBarTabText.Style" parent="@style/AppTheme">
        <item name="android:textColor">@color/tab_text_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">50dp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
