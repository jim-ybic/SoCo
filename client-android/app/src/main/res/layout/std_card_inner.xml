        android:background="#ccc"/>

    <ImageButton
        android:id="@+id/test_image_friend1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_test5"
        android:layout_toRightOf="@id/sep_friends"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_action_user"/>

    <ImageButton
        android:id="@+id/test_image_friend2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_test5"
        android:layout_toRightOf="@id/test_image_friend1"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/ic_action_user"/>

    <ImageButton
        android:id="@+id/test_image_friend3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_test5"
        android:layout_toRightOf="@id/test_image_friend2"
        android:background="?android:attr/selectableItemBackground"
