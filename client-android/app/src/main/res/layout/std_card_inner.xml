    <TextView
        android:id="@+id/distance"
        style="@android:style/TextAppearance.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/test_image_camera4"
        android:layout_below="@id/divider_test4"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/location"
        android:fontFamily="sans-serif-condensed"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@android:color/secondary_text_light"
        tools:text=" ~0.5km" />


    <ImageButton
        android:id="@+id/test_image_like4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/divider_test4"
        android:layout_toLeftOf="@+id/sep_host"
        android:background="?android:attr/selectableItemBackground"
        android:src="@drawable/camera"/>

    <View
        android:id="@+id/sep_host"
        android:layout_width="1dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/test_image_camera4"
        android:layout_below="@id/divider_test4"
        android:layout_marginTop="7dp"
        android:layout_toLeftOf="@+id/host"
        android:background="#ccc"/>

    <TextView
        android:id="@+id/host"
        style="@android:style/TextAppearance.Inverse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/test_image_camera4"
        android:layout_below="@id/divider_test4"
        android:gravity="center_vertical"
        android:layout_alignParentRight="true"
        android:fontFamily="sans-serif-condensed"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="@android:color/secondary_text_light"
        tools:text="  Best Host" />

