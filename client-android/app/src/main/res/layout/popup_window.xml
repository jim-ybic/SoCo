<LinearLayout
    android:id="@+id/master"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/darker_gray"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_myprofile"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:textColor="@android:color/white"
        android:id="@+id/popup_profile"
        android:clickable="true"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/menu_myevents"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:textColor="@android:color/white"
        android:id="@+id/popup_myevents"
        android:clickable="true"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_activity_my_buddies"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:textColor="@android:color/white"
        android:id="@+id/popup_mybuddies"
        android:clickable="true"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="All Groups"
        android:layout_gravity="center_horizontal"
        android:padding="15dp"
        android:textColor="@android:color/white"
        android:id="@+id/popup_allgroups"
        android:clickable="true"
        android:textSize="16sp" />


    <!--<TextView-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
