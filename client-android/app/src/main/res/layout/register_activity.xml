<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="Register"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:textColor="@android:color/white"
        android:id="@+id/header"
        android:paddingTop="20dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/userdetails"
            android:paddingTop="40dp">

            <TableLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="15"
                android:id="@+id/userinfo">
                <TableRow>
                    <EditText
                        android:id="@+id/fname"
                        android:hint="first name"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:textColor="@android:color/white" />
                    <EditText
                        android:id="@+id/lname"
                        android:hint="last name"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:inputType="text"
                        android:textColor="@android:color/white" />
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/email"
                        android:hint="email"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_weight="1"
                        android:inputType="textEmailAddress"
                        android:textColor="@android:color/white" />
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/areacode"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:inputType="phone"
                        android:hint="+852"
                        android:textColor="@android:color/white" />
                    <EditText
                        android:id="@+id/phone"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:inputType="phone"
                        android:hint="phone (optional)"
                        android:layout_weight="1"
                        android:textColor="@android:color/white" />
                </TableRow>
                <TableRow>
                    <EditText
                        android:id="@+id/password"
                        android:layout_width="fill_parent"
                        android:layout_height="60dp"
                        android:inputType="textPassword"
                        android:hint="password"
                        android:layout_weight="1"
                        android:textColor="@android:color/white" />
                </TableRow>
            </TableLayout>
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/registerbutton"
            android:paddingTop="60dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:onClick="register"
                android:layout_weight="1"
                android:background="@drawable/round_reactangle_transparent"
                android:textColor="@android:color/white" />
        </LinearLayout>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/declarations"
            android:layout_gravity="center_horizontal"
            android:paddingTop="40dp">

            <TextView
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:text="By using our app, you agree to our"
                android:gravity="center_horizontal"
                android:textSize="10dp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/termsconditions"
                    android:gravity="center_horizontal"
                    android:textSize="10dp"
                    android:textColor="@android:color/white" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text=" and "
                    android:gravity="center_horizontal"
                    android:textSize="10dp"
                    android:textColor="@android:color/white" />
                <TextView
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/privacypolicy"
                    android:gravity="center_horizontal"
                    android:textSize="10dp"
                    android:textColor="@android:color/white" />
            </LinearLayout>
        </LinearLayout>



    </LinearLayout>

